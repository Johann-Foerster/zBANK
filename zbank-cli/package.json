{
  "name": "zbank-cli",
  "version": "1.0.0",
  "description": "Modern CLI Banking System - React Ink replacement for COBOL mainframe application",
  "main": "dist/index.js",
  "bin": {
    "zbank": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsup src/index.tsx --format esm --out-dir dist --minify --clean",
    "dev": "tsup src/index.tsx --format esm --out-dir dist --watch",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test": "echo \"Tests will be added in future tasks\""
  },
  "keywords": [
    "banking",
    "cli",
    "react-ink",
    "typescript",
    "zbank"
  ],
  "author": "zBANK Development Team",
  "license": "ISC",
  "dependencies": {
    "ink": "^6.7.0",
    "ink-big-text": "^2.0.0",
    "ink-gradient": "^4.0.0",
    "ink-select-input": "^6.2.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.13",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.39.2",
    "ink-testing-library": "^4.0.0",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
